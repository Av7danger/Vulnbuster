# Application Settings
DEBUG=False
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here

# API Keys (Get these from respective services)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
SHODAN_API_KEY=your-shodan-api-key
CENSYS_API_ID=your-censys-api-id
CENSYS_API_SECRET=your-censys-api-secret

# Database Configuration
DATABASE_URL=sqlite:///./vulnbuster.db
DATABASE_TEST_URL=sqlite:///./test_vulnbuster.db

# Web Interface
WEB_HOST=0.0.0.0
WEB_PORT=8000
WEB_WORKERS=4
WEB_RELOAD=False

# Security
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=*  # In production, specify exact origins
RATE_LIMIT=100/1minute

# Email Settings (for notifications)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@vulnbuster.com

# Redis (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# Feature Flags
ENABLE_AI=True
ENABLE_CLOUD_SYNC=False
ENABLE_TELEMETRY=True

# Logging
LOG_FILE=vulnbuster.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
